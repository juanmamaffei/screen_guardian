<p style="color: green"><%= notice %></p>
<section
  class="overflow-hidden bg-[url(https://images.unsplash.com/photo-1602810319428-019690571b5b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80)] bg-cover bg-center bg-no-repeat"
>
  <div class="bg-black/25 p-8 md:p-12 lg:px-16 lg:py-24">
    <div class="text-center sm:text-left">
      <h2 class="text-2xl font-bold text-white sm:text-3xl md:text-5xl">
       Register Activity
      </h2>

      <p
        class="hidden max-w-lg text-white/90 md:mt-6 md:block md:text-lg md:leading-relaxed"
      >Click here to start tracking your baby's activities</p>

      <div class="mt-4 sm:mt-8">

<%= link_to "New screen time", new_screen_time_path, class: "inline-block rounded-full bg-indigo-600 px-12 py-3 text-sm font-medium text-white transition hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-yellow-400" %>

      </div>
    </div>
  </div>
</section>
<div id="screen_times">
  <% @screen_times.each do |screen_time| %>
    <%= render screen_time %>
    <p>
      <%= link_to "Show this screen time", screen_time %>
    </p>
  <% end %>
</div>
<%= link_to "New screen time", new_screen_time_path %>
